{
  "name": "@isilin/react-slot",
  "private": true,
  "version": "0.1.0",
  "description": "Simple and powerful typed slots for React components",
  "author": "Isilin <isilinbn@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Isilin/react-slot"
  },
  "homepage": "https://github.com/Isilin/react-slot#readme",
  "bugs": {
    "url": "https://github.com/Isilin/react-slot/issues"
  },
  "keywords": [
    "react",
    "slots",
    "slot-components",
    "compound-components",
    "react-slot",
    "typescript",
    "storybook",
    "component-library"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.cjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "storybook": "storybook dev -p 6006",
    "dev": "npm run storybook",
    "build-storybook": "storybook build",
    "deploy-storybook": "yarn run build-storybook && gh-pages -d storybook-static"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "change-case": "^5.4.4",
    "react-is": "^18.2.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@types/gh-pages": "^6",
    "@types/node": "^22.15.2",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "classnames": "^2.5.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "gh-pages": "^6.3.0",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "storybook": "^8.6.12",
    "tsup": "^8.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "engines": {
    "node": ">=20",
    "yarn": ">=4"
  }
}
